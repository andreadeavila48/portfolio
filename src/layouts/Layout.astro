---
import "../styles/global.css";

interface Props {
    title?: string;
    description?: string;
}

const { 
    title = "Oriana de Avila | Analista de Datos",
    description = "Portafolio profesional de Oriana de Avila, Analista de Datos especializada en an치lisis de ventas, dise침o de bases de datos y estrategias de redes sociales."
} = Astro.props;

// URLs absolutas para las im치genes
const baseUrl = 'https://oadeavila.live';
const profileImage = `${baseUrl}/foto-perfil.webp`;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		 <!-- PWA Manifest -->
		<link rel="manifest" href="/manifest.json">
		<meta name="theme-color" content="#460043">
		
		<!-- SEO Metatags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="author" content="Oriana de Avila" />
		<meta name="keywords" content="analista de datos, data science, bases de datos, SQL, Python, an치lisis de ventas, redes sociales, MIPS Colombia" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={profileImage} />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:site_name" content="Oriana de Avila | Portafolio" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={profileImage} />
		
		<!-- Otros metatags importantes -->
		<link rel="canonical" href={Astro.url.href} />
		<meta name="robots" content="index, follow" />
	</head>
	<body>
		<div class="background-animation"></div>
		<slot />
	</body>
</html>

<style>
	body {
		margin: 0;
		min-height: 100vh;
		position: relative;
		overflow-x: hidden;
	}

	.background-animation {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(125deg, #00FF57 0%, #010033 40%, #460043 70%, #FF0000 100%);
		background-size: 400% 400%;
		animation: gradient 15s ease infinite;
		z-index: -1;
		opacity: 0.8;
	}

	@keyframes gradient {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}
</style>
