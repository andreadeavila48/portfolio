---
import { Image } from 'astro:assets';

interface Props {
    name: string;
    role: string;
    imageUrl: ImageMetadata;
}

const { name, role, imageUrl } = Astro.props;
---

<div class="text-center relative">
    <div class="relative w-24 h-24 sm:w-32 sm:h-32 mx-auto mb-4 sm:mb-6 group">
        <div class="absolute inset-0 bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500 rounded-full animate-spin-slow opacity-75 blur-md"></div>
        <Image 
            width="300" height="300"
            alt={`${name}'s profile picture`}
            src={imageUrl} 
            alt={name}
            class="relative rounded-full w-full h-full object-cover border-4 border-white shadow-xl"
        />
    </div>
    <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-600">
        {name}
    </h1>
    <p class="text-sm sm:text-base text-white/90 mt-2 font-medium tracking-wide">{role}</p>
</div>

<style>
    @keyframes spin-slow {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
    
    .animate-spin-slow {
        animation: spin-slow 8s linear infinite;
    }
</style>
